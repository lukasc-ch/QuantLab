{
  "architecture": {
    "class": "VGG",
    "params": {
      "quantAct": false, 
      "quantWeights": false
    }
  },
  "thermostat": {
    "class": "VGG",
    "params": {
      "noise_scheme": {},
      "bindings": []
    }
  },
  "loss_fn": {
      "class": "HingeLoss",
    "params": {"num_classes": 10}
  },
  "optimizer": {
    "class": "Adam",
    "params": {"lr": 1e-3}
  },
  "lr_scheduler": {
    "class": "HandScheduler",
    "params": {
      "schedule": {
        "60": 1e-1,
        "80": 1.0,
        "100": 1e-1,
        "120": 1e-2
      }
    }
  },
  "max_epoch": 200,
  "data": {
    "preprocess": {"augment": true, "valid_fraction": 0.1},
    "batch_size_train": 256,
    "batch_size_valid": 64
  }
}
